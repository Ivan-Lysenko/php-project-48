#!/usr/bin/env php
<?php
namespace Php\Project\Bin;

use function Php\Project\GenDiff\run;

$autoloadPathGlobal = __DIR__ . '/../../../autoload.php';
$autoloadPathLocal = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPathGlobal)) {
    require_once $autoloadPathGlobal;
} else {
    require_once $autoloadPathLocal;
}

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                 Show this screen.
  -v --version              Show version.
  --format <fmt>            Report format [default: stylish]

DOC;

$args = \Docopt::handle($doc, array('version'=>'Generate Diff 0.1'));

$firstFilePath = $args["<firstFile>"];
$secondFilePath = $args["<secondFile>"];
$format = $args["--format"];

run($firstFilePath, $secondFilePath, $format = 'stylish');